<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>FlightBooking</title>
    <title>FlightBooking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand " href="#">FlightBooking</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <%if user_signed_in? %>
                    <li class="nav-item welcome">
                        <div>
                            Welcome <%=  current_user.email %>
                        </div>
                    </li>

                    <li class=" nav-item active space">
                        <%= link_to 'Edit Profile', edit_user_registration_path, class:"navbar-brand" ,class:"btn btn-warning"%>
                    </li>

                    <li class="nav-item">
                        <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class:"navbar-brand",class:"btn btn-danger" %>
                    </li>
                    <%else%>
                    <li class="nav-item">
                        <%= link_to 'Log in', new_user_session_path, class:"navbar-brand"  %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Sign up', new_user_registration_path, class:"navbar-brand"  %>
                    </li>
                    <%end%>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <%= yield %>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.slim.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>