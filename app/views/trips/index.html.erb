<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Aeroplane</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Date</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @trips.each do |trip| %>
        <tr>
            <td><%= trip.aeroplane_id %></td>
            <td><%= trip.origin %></td>
            <td><%= trip.destination %></td>
            <td><%= trip.departure %></td>
            <td><%= trip.arrival %></td>
            <td><%= trip.date %></td>
            <td><%= link_to 'Show', trip %></td>
            <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
            <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>